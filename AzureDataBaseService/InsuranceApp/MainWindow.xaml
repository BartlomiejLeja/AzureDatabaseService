<Window x:Class="InsuranceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InsuranceApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="RestData" Content="Label" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
        <ListView  x:Name="clientsList" HorizontalAlignment="Left" Height="178" Margin="139,31,0,0" VerticalAlignment="Top" Width="307" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                 
                    <GridViewColumn Header="Imię" Width="100" DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Header="Nazwisko" Width="100" DisplayMemberBinding="{Binding SecondName}" />
                    <!--<GridViewColumn Header="Pesel" Width="100" DisplayMemberBinding="{Binding Pesel}"/>-->

                </GridView>
            </ListView.View>
           
        </ListView>

    </Grid>
</Window>
